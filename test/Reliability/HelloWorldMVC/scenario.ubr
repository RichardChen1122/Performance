scenario
{
    name = "Linux + ASP.NET Core + Kestrel + HelloWorldMVC";

    warmup = 1;
    duration = 10;
    cooldown = 1;


   default
    {
        setheader
        {
            name    = "Connection";
            value   = "keep-alive";
        }
        setheader
        {
            name    = "Accept";
            value   = "image/gif, image/x-xbitmap, image/jpeg, image/pjpeg, application/vnd.ms-excel, */*";
        }
        setheader
        {
            name    = "Accept-Language";
            value   = "en-us";
        }
        setheader
        {
            name    = "User-Agent";
            value   = "Mozilla/4.0 (compatible; MSIE 5.01; Windows NT 5.0";
        }

        setheader
        {
            name    = "Host";
            value   = "webcat";
        }

        version     = HTTP11;
        statuscode  = 200;
        cookies	    = false;
        close       = ka;
    }
    transaction
    {
        id = "home request";
        weight = 50;
       
	request
	{
                id="RequestRandom";
	 	url="/";
                port=5000;
	}

        branch
        {
        	goto
		{
			id = "RequestRandom";
			weight = 100;
		}
		goto
		{
			id = "ClientIdle";
			weight = 1;
		}
        } 
        sleep
        {
		id = "ClientIdle";
        	delay=0;
        }      
    }

    
}

